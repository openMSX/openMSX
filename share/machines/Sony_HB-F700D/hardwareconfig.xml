<?xml version="1.0" ?>
<!-- $Id$ -->
<!DOCTYPE msxconfig SYSTEM 'msxconfig2.dtd'>
<msxconfig>

  <info>
    <manufacturer>Sony</manufacturer>
    <code>HB-F700D</code>
    <release_year>1985</release_year>
    <description/>
    <type>MSX2</type>
  </info>

<!-- Note: I'm not 100% sure the mentioned SHA1 sums are of correct dumps -->

  <MapperReadBackBits>largest</MapperReadBackBits>

  <CassettePort/>

  <devices>

    <PPI id="ppi">
      <key_ghosting>true</key_ghosting>
      <sound>
        <volume>16000</volume>
      </sound>
      <io base="0xA8" num="4"/>
    </PPI>

    <VDP id="VDP">
      <version>V9938</version>
      <vram>128</vram>
      <io base="0x98" num="4" type="O"/>
      <io base="0x98" num="2" type="I"/>
    </VDP>

    <PSG id="PSG">
      <sound>
        <volume>21000</volume>
      </sound>
      <io base="0xa0" num="2" type="O"/>
      <io base="0xa2" num="1" type="I"/>
    </PSG>

    <RTC id="Real time clock">
      <sramname>hb-f700d.cmos</sramname>
      <io base="0xb4" num="2" type="O"/>
      <io base="0xb5" num="1" type="I"/>
    </RTC>

    <PrinterPort id="Printer Port">
      <io base="0x90" num="2"/>
     </PrinterPort>

    <primary slot="0">

      <secondary slot="0">
        <ROM id="MSX BIOS with BASIC ROM">
          <rom>
            <filename>roms/hb-f700d_basic-bios2.rom</filename>
            <sha1>cef16eb95502ba6ab2265fcafcedde470a101541</sha1>
          </rom>
        <mem base="0x0000" size="0x8000"/>
        </ROM>
      </secondary>

      </primary>

      <primary external="true" slot="1"/>
     
      <primary external="true" slot="2"/>

      <primary slot="3">
     
        <secondary slot="0">
          <ROM id="MSX Sub ROM">
          <rom>
             <filename>roms/hb-f700d_msx2sub.rom</filename>
	     <sha1>3288894e1be6af705871499b23c85732dbc40993</sha1>
	   </rom>
	   <mem base="0x0000" size="0x4000"/>
	 </ROM>
	 <WD2793 id="Memory Mapped FDC">
          <broken_fdc_read>true</broken_fdc_read>
          <drives>1</drives>
          <rom>
            <filename>roms/hb-f700d_disk.rom</filename>
            <sha1>0e081572f84555dc13bdb0c7044a19d6c164d985</sha1>
            <sha1>7dcd434d9a244e23afd212d3fea4c3bf3fe2a300</sha1>
          </rom>
          <mem base="0x4000" size="0x8000"/>
        </WD2793>
      </secondary>

      <secondary slot="3">
        <MemoryMapper id="Main RAM">
          <mem base="0x0000" size="0x10000"/>
          <size>256</size>
        </MemoryMapper>
      </secondary>

    </primary>
 
  </devices>

</msxconfig>
