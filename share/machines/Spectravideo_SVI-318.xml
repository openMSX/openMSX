<?xml version="1.0" ?>
<!DOCTYPE msxconfig SYSTEM 'msxconfig2.dtd'>
<msxconfig>

  <info>
    <manufacturer>Spectravideo</manufacturer>
    <code>SVI-318</code>
    <release_year>1983</release_year>
    <description>Non-MSX machine, which was heavy inspiration for the MSX standard.</description>
    <type>SVI</type>
  </info>

  <CassettePort/>

  <devices>

    <SVIPPI id="SVI-318 PPI">
      <key_ghosting>true</key_ghosting>
      <sound>
        <volume>16000</volume>
      </sound>
      <io base="0x94" num="4" type="O"/>
      <io base="0x98" num="4" type="I"/>
      <keyboard_type>svi</keyboard_type>
      <has_keypad>false</has_keypad>
      <key_ghosting_sgc_protected>true</key_ghosting_sgc_protected>
      <code_kana_locks>false</code_kana_locks>
      <graph_locks>false</graph_locks>
    </SVIPPI>

    <VDP id="VDP">
      <version>TMS9929A</version>
      <io base="0x80" num="2" type="O"/>
      <io base="0x84" num="2" type="I"/>
    </VDP>

    <SVIPSG id="SVI-318 PSG">
      <type>AY8910</type>
      <sound>
        <volume>21000</volume>
      </sound>
      <io base="0x88" num="1" type="O"/>
      <io base="0x8C" num="1" type="O"/>
      <io base="0x90" num="1" type="I"/>
    </SVIPSG>

    <primary slot="0">
      <ROM id="Spectravideo SVI-318 BASIC v1.0">
        <rom>
          <filename>svi-3x8_v10.rom</filename>
          <sha1>07758272df475e5e06187aa3574241df1b14035b</sha1>
        </rom>
        <mem base="0x0000" size="0x8000"/>
      </ROM>
      <RAM id="Main RAM">
        <mem base="0xC000" size="0x4000"/>
      </RAM>
    </primary>

    <primary external="true" slot="1"/>

  </devices>

</msxconfig>
