<!DOCTYPE msxconfig SYSTEM 'msxconfig2.dtd'>
<msxconfig>

  <info>
    <manufacturer>Spectravideo</manufacturer>
    <code>SVI-738 X'PRESS</code>
    <release_year>1986</release_year>
    <description>A very complete MSX1 machine.</description>
    <type>MSX</type>
  </info>

  <CassettePort/>

  <devices>

    <PPI id="ppi">
      <key_ghosting>true</key_ghosting>
      <sound>
        <volume>16000</volume>
      </sound>
      <io base="0xA8" num="4"/>
    </PPI>

    <VDP id="VDP">
      <io base="0x98" num="4" type="O"/>
      <io base="0x98" num="2" type="I"/>
      <version>V9938</version>
      <vram>16</vram>
    </VDP>

    <PSG id="PSG">
     <type>AY8910</type>
      <sound>
        <volume>21000</volume>
      </sound>
      <io base="0xA0" num="2" type="O"/>
      <io base="0xA2" num="1" type="I"/>
    </PSG>

    <PrinterPort id="Printer Port">
      <io base="0x90" num="2"/>
    </PrinterPort>

    <primary slot="0">
      <ROM id="MSX BIOS with BASIC ROM">
        <rom>
          <filename>roms/svi-738_basic-bios1.rom</filename>
	  <sha1>c53b3f2c00f31683914f7452f3f4d94ae2929c0d</sha1>
        </rom>
        <mem base="0x0000" size="0x8000"/>
      </ROM>
    </primary>

    <primary slot="1">
      <RAM id="Main RAM">
        <slow_drain_on_reset>false</slow_drain_on_reset>
        <mem base="0x0000" size="0x10000"/>
      </RAM>
    </primary>

    <primary external="true" slot="2"/>

    <primary slot="3">

      <secondary slot="0">
        <MSX-RS232 id="Generic MSX RS-232">
          <rom>
            <filename>roms/svi-738_rs232.rom</filename>
	    <sha1>9de525e042d7345f6b725a696bd1b6fef69ecbf1</sha1>
          </rom>
          <io base="0x80" num="8"/>
          <mem base="0x4000" size="0x4000"/>
        </MSX-RS232>
      </secondary>

      <secondary slot="1">
        <MB8877A id="Memory Mapped FDC">
          <broken_fdc_read>false</broken_fdc_read>
          <singlesided/>
          <drives>1</drives>
          <rom>
            <filename>roms/svi-738_disk.rom</filename>
	    <sha1>17b2810545e55d3fa5821d74d8b5ab5475165fba</sha1>
	    <sha1>e3130d89a422db291142f366ab24cd0dbc921467</sha1>
          </rom>
          <mem base="0x4000" size="0x8000"/>
        </MB8877A>
      </secondary>

      <secondary slot="2"/>

      <secondary slot="3"/>

    </primary>

  </devices>

</msxconfig>
