<?xml version="1.0" ?>
<!DOCTYPE msxconfig SYSTEM 'msxconfig2.dtd'>
<msxconfig>

  <!-- Thanks to Werner Kai for the details!
       Has a Toshiba Z80
       Based on machine with serial 205093
  -->

  <info>
    <manufacturer>Toshiba</manufacturer>
    <code>HX-51I</code>
    <release_year>1985</release_year>
    <description/>
    <type>MSX</type>
  </info>

  <CassettePort/>

  <devices>

    <PPI id="ppi">
      <sound>
        <volume>16000</volume>
      </sound>
      <io base="0xA8" num="4"/>
      <keyboard_type>int</keyboard_type>
      <has_keypad>false</has_keypad>
      <key_ghosting_sgc_protected>true</key_ghosting_sgc_protected>
      <code_kana_locks>false</code_kana_locks>
      <graph_locks>false</graph_locks>
    </PPI>

    <VDP id="VDP">
      <version>T7937APAL</version>
      <io base="0x98" num="2"/>
    </VDP>

    <PSG id="PSG">
      <type>AY8910</type>
      <sound>
        <volume>21000</volume>
      </sound>
      <io base="0xA0" num="2" type="O"/>
      <io base="0xA2" num="1" type="I"/>
    </PSG>

    <PrinterPort id="Printer Port">
      <io base="0x90" num="2"/>
    </PrinterPort>

    <primary slot="0">
      <RAM id="Main RAM 1">
        <mem base="0x8000" size="0x8000"/>
      </RAM>
      <ROM id="MSX BIOS with BASIC ROM">
        <rom>
          <filename>hx51-basic-bios.rom</filename>
          <sha1>829c00c3114f25b3dae5157c0a238b52a3ac37db</sha1>
        </rom>
        <mem base="0x0000" size="0x8000"/>
      </ROM>
    </primary>

    <primary external="true" slot="1"/>

    <primary external="true" slot="2"/>

    <primary slot="3">

      <RAM id="Main RAM 2">
        <mem base="0x0000" size="0x8000"/>
      </RAM>

    </primary>

  </devices>

</msxconfig>
