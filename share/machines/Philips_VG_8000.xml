<?xml version="1.0" ?>
<!DOCTYPE msxconfig SYSTEM 'msxconfig2.dtd'>
<msxconfig>

  <info>
    <manufacturer>Philips</manufacturer>
    <code>VG 8000/00</code>
    <release_year>1984</release_year>
    <description/>
    <type>MSX</type>
  </info>

  <CassettePort/>

  <devices>

    <PPI id="ppi">
      <sound>
        <volume>16000</volume>
      </sound>
      <io base="0xA8" num="4"/>
      <keyboard_type>proto_int</keyboard_type>
      <has_keypad>false</has_keypad>
      <key_ghosting_sgc_protected>true</key_ghosting_sgc_protected>
      <code_kana_locks>true</code_kana_locks>
      <graph_locks>true</graph_locks>
    </PPI>

    <VDP id="VDP">
      <version>TMS9129</version>
      <io base="0x98" num="2"/>
    </VDP>

    <PSG id="PSG">
      <type>AY8910</type>
      <sound>
        <volume>21000</volume>
      </sound>
      <io base="0xA0" num="2" type="O"/>
      <io base="0xA2" num="1" type="I"/>
      <ignorePortDirections>false</ignorePortDirections> <!-- not sure, but guess based on discrete PSG chip -->
    </PSG>

<!-- Note: no printerport! -->

    <primary slot="0">
      <RAM id="Main RAM">
        <mem base="0xC000" size="0x4000"/>
      </RAM>
      <ROM id="MSX BIOS with BASIC ROM">
        <rom>
          <filename>vg8000_basic-bios1.rom</filename>
          <sha1>42252cf87deeb58181a7bfec7c874190a1351779</sha1> <!-- same as VG 8010, confirmed by Bas Tilborghs -->
        </rom>
        <mem base="0x0000" size="0x8000"/>
      </ROM>
    </primary>

    <primary external="true" slot="1"/>

    <primary external="true" slot="2"/>

    <primary slot="3"/>

  </devices>

</msxconfig>
