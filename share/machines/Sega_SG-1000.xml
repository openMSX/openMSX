<?xml version="1.0" ?>
<!DOCTYPE msxconfig SYSTEM 'msxconfig2.dtd'>
<msxconfig>

  <info>
    <manufacturer>Sega</manufacturer>
    <code>SG-1000</code>
    <release_year>1983</release_year>
    <description>Game console with hardware similar to MSX</description>
    <type>SG-1000</type>
  </info>

  <slotmap>
    <map page="0" slot="1"/>
    <map page="1" slot="1"/>
    <map page="2" slot="1"/>
    <map page="3" slot="0"/>
  </slotmap>

  <devices>

    <SG1000Pause id="pause"/>

    <VDP id="VDP">
      <version>TMS9918A</version>
      <io base="0x80" num="64"/>
      <!-- TODO: What saturation value would be accurate? -->
    </VDP>

    <SNPSG id="PSG">
      <type>SN76489AN</type>
      <io base="0x40" num="64" type="O"/>
      <sound>
        <volume>21000</volume>
      </sound>
    </SNPSG>

    <SG1000Joystick id="joysticks">
      <io base="0xC0" num="64" type="I"/>
    </SG1000Joystick>

    <primary slot="0">
      <RAM id="Main RAM">
        <size>1024</size>
        <mem base="0xC000" size="0x4000"/>
      </RAM>
    </primary>

    <primary external="true" slot="1"/>

  </devices>

</msxconfig>
