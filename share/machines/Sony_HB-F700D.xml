<?xml version="1.0" ?>
<!DOCTYPE msxconfig SYSTEM 'msxconfig2.dtd'>
<msxconfig>

  <info>
    <manufacturer>Sony</manufacturer>
    <code>HB-F700D</code>
    <release_year>1985</release_year>
    <description>German version of the Sony HB-F700</description>
    <type>MSX2</type>
  </info>

<!-- ROM dumps and initial content verified on George van Halderen's machine -->

  <CassettePort/>

  <devices>

    <S1985 id="S1985"> <!-- includes 5 bits mapper-read-back, confirmed by Manuel -->
      <sramname>hb-f700d_s1985.sram</sramname>
    </S1985>

    <PPI id="ppi">
      <sound>
        <volume>16000</volume>
      </sound>
      <io base="0xA8" num="4"/>
      <keyboard_type>de</keyboard_type>
      <has_keypad>true</has_keypad>
      <key_ghosting_sgc_protected>true</key_ghosting_sgc_protected>
      <code_kana_locks>false</code_kana_locks>
      <graph_locks>false</graph_locks>
    </PPI>

    <VDP id="VDP">
      <version>V9938</version>
      <vram>128</vram>
      <io base="0x98" num="8" type="O"/> <!-- S-1985 mirrors -->
      <io base="0x98" num="8" type="I"/> <!-- S-1985 mirrors -->
    </VDP>

    <PSG id="PSG">
      <type>YM2149</type> <!-- in S-1985 MSX-ENGINE -->
      <sound>
        <volume>21000</volume>
      </sound>
      <io base="0xa0" num="2" type="O"/>
      <io base="0xa2" num="1" type="I"/>
      <ignorePortDirections>true</ignorePortDirections> <!-- not sure, but guess based on use of Engine IC -->
    </PSG>

    <RTC id="Real time clock">
      <sramname>hb-f700d.cmos</sramname>
      <io base="0xb4" num="2" type="O"/>
      <io base="0xb5" num="1" type="I"/>
    </RTC>

    <PrinterPort id="Printer Port">
      <io base="0x90" num="2"/>
     </PrinterPort>

    <primary slot="0">

      <secondary slot="0">
        <ROM id="MSX BIOS with BASIC ROM">
          <rom>
            <filename>hb-f700d_basic-bios2.rom</filename>
            <sha1>cef16eb95502ba6ab2265fcafcedde470a101541</sha1>
          </rom>
        <mem base="0x0000" size="0x8000"/>
        </ROM>
      </secondary>

      </primary>

      <primary external="true" slot="1"/>

      <primary external="true" slot="2"/>

      <primary slot="3">

        <secondary slot="0">
          <ROM id="MSX Sub ROM">
          <rom>
             <filename>hb-f700d_msx2sub.rom</filename>
             <sha1>3288894e1be6af705871499b23c85732dbc40993</sha1>
           </rom>
           <mem base="0x0000" size="0x4000"/>
         </ROM>
         <WD2793 id="Memory Mapped FDC">
          <connectionstyle>Sony</connectionstyle>
          <motor_off_timeout_ms>4000</motor_off_timeout_ms>
          <drives>1</drives>
          <rom>
            <filename>hb-f700d_disk.rom</filename>
            <sha1>12f2cc79b3d09723840bae774be48c0d721ec1c6</sha1> <!-- Except for register area of course, verified by George -->
          </rom>
          <mem base="0x4000" size="0x8000"/>
        </WD2793>
      </secondary>

      <secondary slot="3">
        <MemoryMapper id="Main RAM">
          <mem base="0x0000" size="0x10000"/>
          <initialContent encoding="gz-base64">eJxjYBhY8H+AAQAioH+B</initialContent> <!-- ((chr(0) * 128) + (chr(255) * 128)) -->
          <size>256</size>
        </MemoryMapper>
      </secondary>

    </primary>

  </devices>

</msxconfig>
