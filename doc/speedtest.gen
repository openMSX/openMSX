	out    (#67),a		; MCLK = 0
	ld     a,#06
	out    (#64),a
	ld     a,#01		; P1 mode
	out    (#63),a
	ld     a,FREQ
	out    (#63),a		; NTSC
	ld     a,ENABLE
	out    (#63),a		; display enabled / sprites enabled
	ret

