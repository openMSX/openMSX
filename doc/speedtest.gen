	xor    a
	out    (#63),a
	inc    a
	out    (#63),a	; NX = 256
	ld     a,l
	out    (#63),a
	ld     a,h
	out    (#63),a	; NY = hl
	ld     a,#34
	out    (#64),a
	ret

